<Page x:Class="地铁售票系统.view.page.admin.RechargePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="RechargePage">

    <Grid  Background="#EBF2F9">

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1" Grid.Row="1" >
            <Grid.Resources>
                <Style TargetType="TextBox">
                    <Setter Property="Margin" Value="10,0,0,0"/>
                    <Setter Property="Width" Value="200"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="HorizontalAlignment" Value="Center"/>
                </Style>
                <Style TargetType="PasswordBox">
                    <Setter Property="Width" Value="200"/>
                    <Setter Property="Margin" Value="10,0,0,0"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="HorizontalAlignment" Value="Center"/>
                </Style>
                <Style TargetType="TextBlock">
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="HorizontalAlignment" Value="Center"/>


                </Style>
                <Style TargetType="Label">
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="HorizontalAlignment" Value="Center"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                </Style>
            </Grid.Resources>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" VerticalAlignment="Bottom" Grid.ColumnSpan="2" Margin="0,-5,0,0">
                <Border BorderBrush="#ff59afe4" BorderThickness="5,0,0,0" Margin="0,0,0,5">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource chongzhi}" Foreground="#FF616161" FontSize="20" Margin="5,0,0,0" HorizontalAlignment="Left"/>
                        <Separator Width="268" HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <Label Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" Content="{DynamicResource user1}"/>
            <TextBox Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left"  Name="userName" TextChanged="userName_TextChanged" />


            <Label Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right"  Content="{DynamicResource pass1}"/>
            <PasswordBox Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left"  x:Name="userPassword"/>

            <Label Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right"  Content="{DynamicResource money}"/>
            <TextBox Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left"  Name="rechargeSum" GotFocus="tb_GotFocus" TextChanged="rechargeSum_TextChanged"/>


            <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,10,0,0" VerticalAlignment="Center" Grid.ColumnSpan="2">
                <Border Name="recharge" Background="#FFBECCB7" HorizontalAlignment="Center" Width="200" Height="40" CornerRadius="5" MouseLeftButtonDown="recharge_MouseLeftButtonDown" >
                    <Label Content="{DynamicResource chong}" Foreground="White" FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>
                <Image Name="imgIsSuccess" Source="/images/成功.png" Height="20" Margin="10,0,0,0" Visibility="Hidden"/>
            </StackPanel>
            <StackPanel Grid.Row="5" Orientation="Horizontal" Grid.ColumnSpan="2">
                <Label Content="{DynamicResource balance}"/>
                <Label Name="balance" Content="0"/>
            </StackPanel>
        </Grid>

    </Grid>
</Page>
