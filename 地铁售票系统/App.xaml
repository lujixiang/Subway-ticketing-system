             StartupUri="CheckManagerOrUser.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="myStyle\EnglishDictionary.xaml"/>
